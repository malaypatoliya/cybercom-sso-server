        const regex = /^[^\s@]+@[^\s@]+\.[^\s@]{2,}$/i;

        function handleInputChange(event) {
            const { value } = event.target;

            if (!value) {
                verificationCodeInput.classList.add('error');
                verificationCodeError.textContent = 'Verification Code is required';
            }
